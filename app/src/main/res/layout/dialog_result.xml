<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="@dimen/width_result_image"
        android:layout_height="@dimen/height_result_image"
        android:id="@+id/resultIv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_result_image"
        tools:src="@drawable/nokia_broken"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultTv"
        android:textAppearance="@style/MediumText"
        android:layout_below="@id/resultIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_result_text"
        android:layout_marginBottom="@dimen/margin_bottom_result_text"
        tools:text="app wins monkaS"/>

</RelativeLayout>