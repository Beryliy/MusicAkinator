<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="ring"
            android:innerRadius="@dimen/inner_radius_big"
            android:thickness="@dimen/ring_thickness_medium"
            android:useLevel="false"/>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="ring"
                android:innerRadius="@dimen/inner_radius_big"
                android:thickness="@dimen/ring_thickness_upper_medium"
                android:useLevel="false"/>
        </clip>
    </item>
</layer-list>